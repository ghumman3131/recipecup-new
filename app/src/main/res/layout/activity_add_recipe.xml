<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_recipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.AddRecipe">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/vegmen"
        android:orientation="vertical"
        android:padding="20dp"

       >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:backgroundTint="#fff"
                android:layout_gravity="center"
                android:onClick="home"
                android:clickable="true"/>

            <View
                android:layout_width="20dp"
                android:layout_height="20dp">

            </View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Your Recipe"
                android:textColor="#fff"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipe Name"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/recipe_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circ"
                    android:backgroundTint="#4effffff"
                    android:padding="12dp"
                    android:textColorHint="#96736a6a"
                    android:textSize="15dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/veg_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#2b9748"
                        android:padding="12dp"
                        android:text="VEG"
                        android:textColor="#fff"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/non_veg_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#DA2313"
                        android:padding="12dp"
                        android:text="NON VEG"
                        android:textColor="#fff"
                        android:textSize="20dp" />
                </RadioGroup>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Ingredients"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/sel_ingredient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/circ"
                    android:backgroundTint="#4effffff"
                    android:clickable="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:onClick="select_ingredient"
                    android:padding="12dp"
                    android:textColorHint="#96736a6a"
                    android:textSize="15dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Steps"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/steps_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circ"
                    android:backgroundTint="#4effffff"
                    android:padding="12dp"
                    android:textColorHint="#96736a6a"
                    android:textSize="15dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/circ"
                    android:backgroundTint="#837f7f"
                    android:onClick="add_recipe"
                    android:padding="12dp"
                    android:text="Add Recipe"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</RelativeLayout>
