<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dell.recipecup">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".LogoRecipe">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".HomeActivity" />
        <activity
            android:name=".SignUp"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.dell.ByIngredients" />
        <activity android:name="com.example.dell.tips" />
        <activity android:name="com.example.dell.SearchByRecipe" />
        <activity android:name="com.example.dell.ForgotPassword" />
        <activity android:name="com.example.dell.Otp" />
        <activity android:name="com.example.dell.AddRecipe" />
        <activity android:name=".ResetPassword" />
        <activity android:name=".CategoryTips" />
        <activity android:name=".Select_veg_ingredient" />
        <activity android:name=".Select_non_veg_ingredient" />
        <activity android:name=".RecipeResult" />
        <activity android:name=".recipe_details" />
        <activity android:name=".Comments" />
        <activity android:name=".Edit_profile"></activity>
    </application>

</manifest>